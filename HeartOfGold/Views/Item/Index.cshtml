@model IEnumerable<HeartOfGold.Models.Item>

@{
    ViewBag.Title = "Donation Inventory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li>
        <a href="@Url.Action("Index", "Home")">
            <i class="fas fa-home"></i>
            &nbsp;Home
        </a>
    </li>
    <li class="active">
        <i class="fas fa-th-list"></i>
            &nbsp;View Inventory      
    </li>
</ol>

<h3>Inventory</h3>
<hr />
<p class="lead">Collection of donated items</p>

<a href="@Url.Action("New", "Item", null)" class="btn btn-primary register-button">
    <i class="fas fa-check"></i>
    &nbsp;New Donation
</a>

    @*@Html.ActionLink("New Donation", "New", "Item", null, new { @class = "btn btn-primary" })*@


<br />
<br />

@*@if (!Model.Any())
{
    <p>We don't have any items in the inventory yet.</p>
}

else*@

    <table id="Inventory" class="table table-bordered table-hover">
        <thead>
            <tr style="background-color:#e6e6e6 ">
                <th>Donation</th>
                <th>Category</th>
                <th>Description</th>
                <th>Quantity</th>
                <th>Donated By</th>
                <th>Date Added</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.ActionLink(item.Name, "Edit", "Item", new { id = item.Id }, null)</td>
                    <td>@Html.DisplayFor(m => item.Category.Name)</td>
                    <td>@item.Description</td>
                    <td>@item.Quantity</td>
                    <td>@Html.DisplayFor(m => item.Donor.FullName)</td>
                    <td>@Html.DisplayFor(m => item.DateAdded)</td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <hr />

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#Inventory").DataTable();
        })

        $('#Inventory').dataTable({
            "pageLength": 25
        });

    </script>
}

