@model HeartOfGold.Models.Item

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li>@Html.ActionLink("Home", "Index", "Home")</li>
    <li>@Html.ActionLink("View Inventory", "Index", "Item")</li>
    <li class="active">View Item</li>
</ol>
<h3>View Item</h3>

<ul class="list-group">
    <li class="list-group-item">Item Name:@Model.Name</li>
    <li class="list-group-item">Category: @Model.Category.Name</li>
    <li class="list-group-item">Description: @Model.Description</li>
</ul>