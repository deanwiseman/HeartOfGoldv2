@model IPagedList<HeartOfGold.Models.Request>
@using PagedList.Mvc;
@using PagedList;

@{
    ViewBag.Title = "ViewRequests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="/Content/PagedList.css" rel="stylesheet" type="text/css" />

<div class="center">
    <h3>Submitted Requests</h3>
    <hr />
    <p class="lead">Show them all</p>
</div>

@{int i = 0;}
@foreach (var request in Model)
{
    @* -- Row 1 -- *@
    if (i % 2 == 0)
    {
        @:<div class="row">
        }
        @* -- Column 6/12 -- *@
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">Heading</div>
                <div class="panel-body">
                    <div class="form-group">
                        <label><strong>Request Body</strong></label>
                        @Html.TextAreaFor(r => request.Description, new { @class = "form-control", rows = "3", cols = "20" })
                    </div>
                    <div class="form-group">
                        <label><strong>Current Status</strong></label>
                        @Html.TextBoxFor(r => request.RequestStatus.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label><strong>Date Submitted</strong></label>
                        @Html.TextBoxFor(r => request.Date, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <button class="btn btn bg-primary register-button">Process...</button>
                    </div>

                    <div class="form-group">
                        <label class="radio-inline">
                            <input type="radio" name="optradio" checked>Successful
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="optradio">Unsuccessful
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="optradio">Empty
                        </label>
                    </div>
                </div>
            </div>
        </div>
        if (i % 2 != 0)
        {
        @:</div>
    }
    i++;
}

<div class="row center">
    <div class="col-md-6 col-md-offset-3">
        <h5>Browse...</h5>
        @Html.PagedListPager((IPagedList)ViewBag.OnePageOfRequests, page => Url.Action("GetRequests", new { page = page }))
    </div>
</div>

