            </ul>
        </div>*@


    <div class="hidden-sm hidden-xs">
        <div class="navbar navbar-inverse navbar-color navbar-fixed-bottom container-fluid">
            <div class="navbar-collapse collapse navbar-fontsize center">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Get in contact", "About", "Home")</li>
                    @*<li>@Html.ActionLink("Need Help?", "ViewHelp", "Help")</li>*@
